<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Student Update"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/course_editText"
                    android:textSize="16sp"
                    android:clickable="false"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:fontFamily="sans-serif"
                    android:maxLength="45"
                    android:drawableEnd="@drawable/books_xml"
                    android:hint="Course Enrolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/name_editText"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:maxLength="45"
                    android:imeOptions="flagNoExtractUi"
                    android:drawableEnd="@drawable/user"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    android:hint="Fullname" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_editText"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:imeOptions="flagNoExtractUi"
                    android:drawableEnd="@drawable/envelope_xml"
                    android:layout_height="wrap_content"
                    android:hint="Email Address" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/contact_editText"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:inputType="number"
                    android:fontFamily="sans-serif"
                    android:imeOptions="flagNoExtractUi"
                    android:maxLength="24"
                    android:drawableEnd="@drawable/tele_xml"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.datetimerecord.utils.LineEditText
                    android:id="@+id/address_editText"
                    android:textSize="16sp"
                    android:maxLength="499"
                    android:imeOptions="flagNoExtractUi"
                    android:fontFamily="sans-serif"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:layout_height="100dp"
                    android:hint="Address" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/studentUpdatet_button"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:background="@drawable/transparent_btn"
                android:textColor="@color/textColor"
                android:text="Update"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>