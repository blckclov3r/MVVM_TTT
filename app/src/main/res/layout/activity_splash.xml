<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:background="@drawable/building_fifty"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:alpha=".3"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/title_textView"
                android:text="Lorem Ipsum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:textColor="#333"
                android:textSize="30sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/title_textView"
                android:id="@+id/subTitle_textView"
                android:layout_centerHorizontal="true"
                android:text="Trainee Time Tracker"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_appCompatImageView"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="fitXY"
                android:layout_below="@id/subTitle_textView"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <TextView
                android:text="Lorem Ipsum"
                android:layout_below="@id/image_appCompatImageView"
                android:layout_marginTop="30dp"
                android:textSize="21sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/company_textView"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@id/company_textView"
                android:id="@+id/company_subText_textView"
                android:text="All Right Reserved 2019"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/sourceCode_1"
                android:text="github.com/blckclov3r"
                android:layout_below="@id/company_subText_textView"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sourceCode_2"
                android:text="bitbucket.com/blckclov3r"
                android:layout_below="@id/sourceCode_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/facebook_textView"
                android:layout_below="@id/sourceCode_2"
                android:text="facebook.com/blckclov3r"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/instagram_textView"
                android:layout_below="@id/facebook_textView"
                android:text="instagram.com/blckclov3r"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>