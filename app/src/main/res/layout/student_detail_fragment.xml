<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="Student Detail"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/_search_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />

                <TextView
                    android:text="Id: "
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:id="@+id/id_textView"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/_user_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />

                <TextView
                    android:text="Name:"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/name_textView"
                    android:text="null"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/books_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />

                <TextView
                    android:text="Course:"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/course_textView"
                    android:text="null"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColor"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/envelope_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="Email:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/email_textView"
                    android:text="null"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/tele_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="Contact:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/contact_textView"
                    android:text="null"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/map_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="Address:"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/address_textView"
                    android:text="null"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/balance_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />

                <TextView
                    android:text="Remaining:"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/remaining_textView"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:text="null"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/hourglass_xml"
                    android:layout_width="20dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="Timestamp:"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/timestamp_textView"
                    android:text="null"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/timeUpdate_button"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="Set"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:textAllCaps="false"
                android:background="@drawable/transparent_btn"
                android:textColor="@color/textColor"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>